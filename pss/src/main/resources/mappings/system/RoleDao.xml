<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nmw.pss.module.system.dao.RoleDao">
    <resultMap type="Role" id="entityResult">
    	<id property="id" column="id"/>
    	<result property="createTime" column="create_time"/>
    	<result property="updateTime" column="update_time"/>
    	<result property="createUserId" column="create_user"/>
    	<result property="updateUserId" column="update_user"/>
    	<result property="remark" column="remark"/>
    	<result property="delSign" column="del_sign"/>
    	
    	<result property="name" column="name"/>
    </resultMap>
    
	<insert id="insert">
		INSERT INTO role(id, create_time, update_time, create_user, update_user, remark, del_sign,
			name) 
		VALUES (#{id}, #{createTime}, #{updateTime}, #{createUserId}, #{updateUserId}, #{remark}, #{delSign}, 
		#{name})
	</insert>
	
	<delete id="deleteById">
		DELETE FROM role WHERE id = #{id}
	</delete>
	
	<select id="selectById" resultMap="entityResult">
		SELECT 
			*
		FROM 
			role 
		WHERE 
			id = #{id}
	</select>
	
	<select id="selectAll" resultMap="entityResult">
		SELECT 
			*
		FROM 
			role
		<where>
			del_sign='1'
		</where>
	</select>
	
	<update id="updateById">
		UPDATE role 
		SET 
			update_time = #{updateTime}, 
			update_user = #{updateUserId}, 
			remark = #{remark}, 
			del_sign = #{delSign}, 
			
			name = #{name}
		WHERE id = #{id}
	</update>
	
	<select id="selectByModel" resultMap="entityResult">
		SELECT 
			*
		FROM 
			role 
		<where>
			del_sign=#{DEL_NORMAL}
			<if test="name != null and name != ''">
				AND name=#{name}
			</if>
		</where>
	</select>
	
</mapper>